<div class="row text-center mt-4">
    <!-- Cars -->
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <i class="bi bi-car-front-fill fs-1 text-primary"></i>
                <h5 class="card-title mt-3">Cars</h5>
                <a href="@Url.Action("Index", "Arac")" class="btn btn-primary mt-2">Manage Cars</a>
            </div>
        </div>
    </div>

    <!-- Customers -->
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <i class="bi bi-people-fill fs-1 text-success"></i>
                <h5 class="card-title mt-3">Customers and Employees</h5>
                <a href="@Url.Action("Index", "Kisi")" class="btn btn-success mt-2">View Customers</a>
            </div>
        </div>
    </div>

    <!-- Contracts -->
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <i class="bi bi-file-earmark-text-fill fs-1 text-warning"></i>
                <h5 class="card-title mt-3">Contracts</h5>
                <a href="@Url.Action("Index", "Sozlesme")" class="btn btn-warning mt-2">View Contracts</a>
            </div>
        </div>
    </div>
</div>

<div class="row text-center mt-4">
    <!-- Ajans -->
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <i class="bi bi-building fs-1 text-info"></i>
                <h5 class="card-title mt-3">Ajans</h5>
                <a href="@Url.Action("Index", "Ajans")" class="btn btn-info mt-2">Manage Ajans</a>
            </div>
        </div>
    </div>

    <!-- Payments -->
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <i class="bi bi-cash-stack fs-1 text-danger"></i>
                <h5 class="card-title mt-3">Payments</h5>
                <a href="@Url.Action("Details", "Fatura")" class="btn btn-danger mt-2">View Payments</a>
            </div>
        </div>
    </div>

    <!-- Reports -->
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <i class="bi bi-bar-chart-line-fill fs-1 text-secondary"></i>
                <h5 class="card-title mt-3">Reports</h5>
                <a href="@Url.Action("Index", "Reports")" class="btn btn-secondary mt-2">View Reports</a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row text-center mt-5">
    <div class="col-md-3">
        <div class="card shadow bg-light">
            <div class="card-body">
                <h5>Total Cars</h5>
                <p class="fs-3 text-primary">@ViewBag.TotalCars</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow bg-light">
            <div class="card-body">
                <h5>Total Customers</h5>
                <p class="fs-3 text-success">@ViewBag.TotalCustomers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow bg-light">
            <div class="card-body">
                <h5>Active Contracts</h5>
                <p class="fs-3 text-warning">@ViewBag.ActiveContracts</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow bg-light">
            <div class="card-body">
                <h5>Monthly Revenue</h5>
                <p class="fs-3 text-danger">$@ViewBag.MonthlyRevenue</p>
            </div>
        </div>
    </div>
</div>

