@model RentCar.Models.Ajan

<h2>Agency Details</h2>

<div>
    <h4>@Model.AjansAdi</h4>
    <dl class="row">
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Adres</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Telefon</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.EPosta</dd>

        <dt class="col-sm-2">Admin TC</dt>
        <dd class="col-sm-10">@Model.AdminTc</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
<a asp-action="Edit" asp-route-id="@Model.IdAjans" class="btn btn-primary">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.IdAjans" class="btn btn-danger">Delete</a>
