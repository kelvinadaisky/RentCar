@model RentCar.Models.Ajan

<h2>Delete Agency</h2>

<div>
    <h4>Are you sure you want to delete this agency?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.AjansAdi</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Adres</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Telefon</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.EPosta</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdAjans" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
