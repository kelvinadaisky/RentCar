@model IEnumerable<RentCar.Models.Arac>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-center mb-0">Car List</h2>

        <div ">
            <a href="@Url.Action("Create", "Arac")" class="btn btn-success">Add New Car</a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>



    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Brand</th>
                <th>Model</th>
                <th>Color</th>
                <th>Plate Number</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var arac in Model)
            {
                <tr>
                    <td>@arac.Marka</td>
                    <td>@arac.Model</td>
                    <td>@arac.Renk</td>
                    <td>@arac.PlakaNumarasi</td>
                    <td class="text-center">
                        <a href="@Url.Action("Details", "Arac", new { id = arac.IdAraba })" class="btn btn-info btn-sm me-1">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a href="@Url.Action("Edit", "Arac", new { id = arac.IdAraba })" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", "Arac", new { id = arac.IdAraba })" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
