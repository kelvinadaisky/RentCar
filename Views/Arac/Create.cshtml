@model RentCar.Models.Arac

<h1>Create New Car</h1>
<hr />

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Marka" class="control-label"></label>
        <input asp-for="Marka" class="form-control" />
        <span asp-validation-for="Marka" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Renk" class="control-label"></label>
        <input asp-for="Renk" class="form-control" />
        <span asp-validation-for="Renk" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UretimYili" class="control-label"></label>
        <input asp-for="UretimYili" class="form-control" />
        <span asp-validation-for="UretimYili" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlakaNumarasi" class="control-label"></label>
        <input asp-for="PlakaNumarasi" class="form-control" />
        <span asp-validation-for="PlakaNumarasi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="IdAjans">Agency</label>
        <select asp-for="IdAjans" class="form-control" asp-items="ViewBag.AjansList">
            <option value="">Select Agency</option>
        </select>
        <span asp-validation-for="IdAjans" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="@Url.Action("Index", "Arac")" class="btn btn-secondary">Back to List</a>
    </div>
</form>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
