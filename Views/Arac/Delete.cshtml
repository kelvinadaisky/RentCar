@model RentCar.Models.Arac

@{
    ViewData["Title"] = "Delete Car";
}

<h1>Delete Car</h1>

<h4>Are you sure you want to delete this car?</h4>
<hr />

<div class="form-group">
    <label>Marka</label>
    <div>@Model.Marka</div>
</div>

<div class="form-group">
    <label>Model</label>
    <div>@Model.Model</div>
</div>

<div class="form-group">
    <label>Renk</label>
    <div>@Model.Renk</div>
</div>

<div class="form-group">
    <label>UretimYili</label>
    <div>@Model.UretimYili</div>
</div>

<div class="form-group">
    <label>PlakaNumarasi</label>
    <div>@Model.PlakaNumarasi</div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdAraba" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Arac")" class="btn btn-secondary">Cancel</a>
</form>
