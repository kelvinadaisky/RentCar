@model RentCar.Models.Arac

<h1>Delete Car</h1>

<hr />

<div class="form-group">
    <label>Brand</label>
    <div>@Model.Marka</div>
</div>

<div class="form-group">
    <label>Model</label>
    <div>@Model.Model</div>
</div>

<div class="form-group">
    <label>Color</label>
    <div>@Model.Renk</div>
</div>

<div class="form-group">
    <label>Year</label>
    <div>@Model.UretimYili</div>
</div>

<div class="form-group">
    <label>License Plate</label>
    <div>@Model.PlakaNumarasi</div>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="IdAraba" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Arac")" class="btn btn-secondary">Cancel</a>
</form>
