@model RentCar.Models.Calisan

<h2>Create Çalışan</h2>
<form asp-action="CreateCalisan">
    @Html.HiddenFor(model => model.Tc)

    <div class="form-group">
        <label asp-for="IdAjans"></label>
        <select asp-for="IdAjans" class="form-control" asp-items="ViewBag.AjansList"></select>
        <span asp-validation-for="IdAjans" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pozisyon"></label>
        <input asp-for="Pozisyon" class="form-control" />
        <span asp-validation-for="Pozisyon" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Maas"></label>
        <input asp-for="Maas" class="form-control" />
        <span asp-validation-for="Maas" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
