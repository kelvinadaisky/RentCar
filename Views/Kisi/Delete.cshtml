@model RentCar.Models.Kisi

<h1>Delete Person</h1>

<h3>Are you sure you want to delete this person?</h3>

<table class="table">
    <tr>
        <th>TC Number</th>
        <td>@Model.Tc</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.Ad</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.Soyad</td>
    </tr>
    <tr>
        <th>Phone</th>
        <td>@Model.Telefon</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.EPosta</td>
    </tr>
    <tr>
        <th>Role</th>
        <td>@Model.Role</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Tc" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
