@model IEnumerable<RentCar.Models.Kisi>

<h1>All Persons</h1>

<div class="d-flex justify-content-between align-items-center mb-3">

<div class="mb-3">
    <!-- Filter buttons -->
    <a href="@Url.Action("Index", "Kisi", new { roleFilter = "Admin" })" class="btn btn-primary">Admin</a>
    <a href="@Url.Action("Index", "Kisi", new { roleFilter = "Musteri" })" class="btn btn-primary">Customer</a>
    <a href="@Url.Action("Index", "Kisi", new { roleFilter = "Çalışan" })" class="btn btn-primary">Employee</a>
    <a href="@Url.Action("Index", "Kisi", new { roleFilter = "" })" class="btn btn-secondary">All</a>
</div>

<div class="mb-3">
    <a href="@Url.Action("Create", "Kisi")" class="btn btn-success">Add New Person</a>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>

</div>

<div class="mb-3">
    <!-- Search Area -->
    <form method="get" action="@Url.Action("Index", "Kisi")">
        <div class="input-group">
            <input type="text" name="searchQuery" class="form-control" placeholder="Search by name or TC number" />
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>TC Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kisi in Model)
        {
            <tr>
                <td>@kisi.Tc</td>
                <td>@kisi.Ad</td>
                <td>@kisi.Soyad</td>
                <td>@kisi.Telefon</td>
                <td>@kisi.EPosta</td>
                <td>@kisi.Role</td>
                <td>
                    <a href="@Url.Action("Details", "Kisi", new { id = kisi.Tc })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Edit", "Kisi", new { id = kisi.Tc })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Kisi", new { id = kisi.Tc })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
